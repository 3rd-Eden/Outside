<div class="boxed table">
  <section class="messages tr" data-type="box">
    <ol class="views dots">
      <li class="box"></li>
      <li class="pm active"></li>
      <li class="pm"></li>
      <li class="pm"></li>
    </ol>
  </section>
	<div class="boxed-btm t-foot">
    <form name="chat" action="#/box/">
      <div class="table">
        <div class="msg-input"><input type="text" name="message" placeholder="Type to chat.." /></div>
        <div class="msg-send"><button type="submit">send</button></div>
        <div id="thefinalcountdown"></div>
      </div>
    </form>
	</div>
</div>
<script type="text/template" id="comment">
  <article class="[%= type %]">
    <dl>
      <dt class="nickname">[%= nickname %]</dt>
      <dd class="time"><time>[%= time %]</time></dd>
      <dd class="gravatar"><img src="[%= avatar %]" alt="[%= nickname %]" /></dd>
    </dl>
    <p>[%= message %]</p>
  </article>
</script>
<script type="text/template" id="announcement">
  <div class="announcement">
    <h6>Announcement</h6>
    <p>[%= message %]</p>
     <a href="#/close/announcement">&nbsp;</a>
  </div>
</script>